<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Down"
    android:clickable="false"
    style="@style/AppTheme.NoActionBar"
    android:touchscreenBlocksFocus="true"
    android:id="@+id/slideThree">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventAccept"
        android:hint="Accept message"
        android:textColorHighlight="@color/highlight"
        android:textColor="@color/highlight"
        android:textColorHint="@color/hintColor"
        android:textIsSelectable="false"
        android:layout_above="@+id/eventDeny"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventDeny"
        android:hint="Deny Message"
        android:textColor="@color/highlight"
        android:elegantTextHeight="false"
        android:textColorHighlight="@color/highlight"
        android:textColorHint="@color/hintColor"
        android:textIsSelectable="false"
        android:lines="1"
        android:gravity="bottom"
        android:layout_above="@+id/sentButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sentButton"
        android:text="Send"
        android:onClick="sendButtonSlideThree"
        android:background="@color/primary"
        android:textColor="@color/highlight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButtonSlideThree"
        android:text="Back"
        android:onClick="backButtonSlideThree"
        android:background="@color/primary"
        android:textColor="@color/highlight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

