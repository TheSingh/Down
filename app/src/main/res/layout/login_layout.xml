<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Down"
    android:clickable="false"
    style="@style/AppTheme.Login"
    android:touchscreenBlocksFocus="true"
    android:id="@+id/slideZero"
    android:background="@drawable/nickslogin">

    <EditText
        android:id="@+id/eventUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="username"
        android:inputType="textEmailAddress"
        android:textColor="#ffffffff"
        android:textColorHint="#ffdedede"
        android:backgroundTint="#ffffffff"
        android:layout_above="@+id/eventPassword1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <EditText
        android:id="@+id/eventPassword1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="password"
        android:inputType="textPassword"
        android:textColorHint="#ffdedede"
        android:textColor="#ffffffff"
        android:backgroundTint="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="login_event"
        android:text="Login"
        android:layout_below="@+id/eventPassword1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/loginlogo"
        android:layout_above="@+id/eventUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="@drawable/joinnowgraphic"
        android:onClick="do_signup"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>