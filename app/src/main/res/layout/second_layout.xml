<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Down"
    android:clickable="false"
    style="@style/AppTheme.NoActionBar"
    android:touchscreenBlocksFocus="true"
    android:id="@+id/slideTwo">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventWhere"
        android:hint="Where?"
        android:textColorHighlight="@color/highlight"
        android:textColor="@color/highlight"
        android:textColorHint="@color/hintColor"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slideTwoNext"
        android:text="Next"
        android:onClick="nextButtonSlideTwo"
        android:background="@color/primary"
        android:textColor="@color/highlight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_below="@+id/eventWhere"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/eventWhere" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slideTwoBack"
        android:text="Back"
        android:onClick="backButtonSlideTwo"
        android:background="@color/primary"
        android:textColor="@color/highlight"
        android:layout_alignTop="@+id/slideTwoNext"
        android:layout_alignParentStart="true" />


</RelativeLayout>
